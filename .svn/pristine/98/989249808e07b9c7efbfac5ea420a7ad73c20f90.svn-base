page{
    background-color: #fcfcfc;
}

.tab-header {
    box-sizing: border-box;
    position: fixed;
    top: 0;
    left: 0;
    display: table;
    width: 100%;
    height:8%;
    background-color: #fff;
    border-radius: 1rpx;
    z-index:999;

}

.tab-header-item {
    display: table-cell;
    font-size: 10pt;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-left: 50rpx;
    background-color: #f8f8f8;
}

.tab-header-active {
    border-bottom: 4rpx solid #8470FF;
    color: #8470FF;
}

.tab-content {
    margin-top: 80rpx;
    height: 2000rpx;
}

.tab-content-item {
    box-sizing: border-box;
    padding: 20rpx;
}

.item-info{
    display: flex;   
    z-index: 2;    
    transition: left 0.2s ease-in-out;
}
.list-item {
    
    justify-content: space-between;
    margin-bottom: 10rpx;
    
}
.b1{
  border-bottom: 1rpx solid #ddd;
}

.list-cover {
    width: 60rpx;
    height: 60rpx;   
    margin-right: 10rpx;
    margin-top: 28rpx;
    margin-bottom: 15rpx;
    z-index: 99;
}


.list-info {
    width: 360rpx;
}

.list-txt {
    margin-bottom: 15rpx;
    color: #666;
    font-size: 25rpx;
}

.list-title {
    font-size: 30rpx;
    color: #333;
    border-bottom:1rpx #999;
}

.list-content{

  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
  border-bottom:1rpx solid #999;
  margin-bottom: 10rpx;
  width: 100%;
  }

.source{
    color: #546379;
    font-size: 14px;    
}

.item-oper{
    display: flex;
    justify-content: flex-end;
}

.oper-delete{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 150rpx;
    z-index: 1;
    color: white;
    background: red;
    height: 154rpx;
    
}




