.search-area{
  position: fixed;
  display: flex;
  flex-direction: row;
}
.search-txt {
    box-sizing: border-box;
    width: 400rpx;
    height: 80rpx;
    padding-left: 40rpx;
    padding-right: 20rpx;
    border-radius: 10rpx;
    border: 1px solid #eee;
    font-family: "微软雅黑";
    font-size: 28rpx;
}
.search-btn {
    position: relative;
    left: 1rpx; 
    height: 80rpx;
    width: 120rpx;
    text-align: center;
    line-height: 80rpx;
    font-size: 28rpx;
}
.switch-btn{
  position: relative;
  width: 210rpx;
  left: 1rpx; 
  height: 80rpx;
  line-height: 80rpx;
  font-size: 22rpx;
}
.add-device-bar{
  position: fixed;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  width: 380rpx;
  background-color: #EEEEE0;
  margin-top: 85rpx;
}
.add-device-bar text{
  margin-left: 20rpx;
  font-size: 34rpx;
}
.add-device-bar button{
  position: relative;
  left: 150rpx;
  font-size: 24rpx;
}
.table{
  position: fixed;
  border:1px solid #dadada;
  border-right: 0;
  border-bottom: 0;
  width: 100%;
  margin-top: 150rpx;
}
.table-title,.table-data,.table-data-part{
  width: 100%;
  display: flex;
  flex-direction: row;
}
.table-data-scroll{
  height: 1000rpx;
}
.table-data{
  overflow-x: hidden;
}
.table-data-part{
  margin-left: -100rpx;
  transform: translateX(100rpx);
  transition: all 0.4s;
}
.delete{
  width: 100rpx;
  background-color: red;
  transform: translateX(100rpx);
  transition: all 0.4s;
  display: flex; 
  flex-direction: column;  
  justify-content: center; 
  text-align: center; 
}
.delete text{
  font-size: 28rpx;
}
.touch-move-active .table-data-part,.touch-move-active .delete{
  transform: translateX(0);
}
.table-title view{
  padding: 4rpx;
  font-size: 26rpx;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: center;
  width:100%;
  font-weight: 400;
  background-color: #dadada;
}
.table-data-part view{
  padding: 2rpx;
  font-size: 25rpx;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  width: 150rpx;
  display: flex; 
  flex-direction: column;  
  justify-content: center; 
  text-align: center; 
  overflow: auto;
}
.pc-detail{
  display: flex;
  flex-direction: column;
}
.lable{
  float: left;
  width: 32%;
  text-align: right;
	font-weight:bold;
  margin-bottom: 1rpx;
  margin-right: 10rpx;
}
.value{
  padding-left: 10rpx;
  border-radius: 10rpx;
  border: 1px solid #afafaf;
  width: 350rpx;
}
.addPicBtn{
  padding-left: 10rpx;
  border-radius: 10rpx;
  width: 174rpx;
}